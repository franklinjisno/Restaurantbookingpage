@model Restaurantbookingpage.Models.ForgotPassword
@{
    ViewBag.Title = "ForgotPassword";
}

<h2 style=" margin-left: 504px; margin-bottom: 28px;">Forgot Password</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div class="text-success">
        @ViewBag.Message
    </div>
    @Html.ValidationSummary(true, "", new {style= "margin-left: 426px;",@class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2" style="margin-left: -154px; margin-left: 236px;">Email </label>
        @Html.TextBox("Email", "", new { @class = "form-control", style = "width: 351px;margin - left: 471px;" })
          @Html.ValidationMessageFor(m => m.Email, "", new {style= "margin-left:467px;",@class = "text-danger" })
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" style="margin-left: -154px; margin-left: 237px; margin-top:-12px; ">Contact No</label>
        @Html.TextBox("ContactNo", "", new { @class = "form-control", style = "width: 351px;margin-left:451px; margin-top:-12px;" })
        @Html.ValidationMessageFor(m => m.ContactNo, "", new { style = "margin-left:467px;", @class = "text-danger" })

    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-success" style="margin-left: -169px; margin-left: 220px; margin-top:-19px; " />
        </div>
    </div>
</div>
}
