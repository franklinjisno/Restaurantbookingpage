@model BookingClass.Bookingmodel




<div>
    <div class="modal-header">
        <h4 class="modal-title">New Booking</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    </div>
    <form asp-action="Create" asp-controller="Booking" method="post" enctype="multipart/form-data">

        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="modal-body form-horizontal">
            <div class="form-group">
                <h4>Customer Name</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Customer_Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Customer_Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h4>Date of Booking</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Datetime, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Datetime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h4>Dinning Type</h4>
                <div class="col-md-10">
                    @* @Html.EditorFor(model => model.Dinning_Type, new { htmlAttributes = new { @class = "form-control" } })*@
                    <select class="form-control" name="Dinning_Type" id="Dinning_Type">
                        <option value="Select">Select</option>
                        <option value="Indoor">Indoor</option>
                        <option value="Outdoor">Outdoor</option>
                        <option value="Terrace">Terrace</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.Dinning_Type, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h4>Number of Guests</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NumberofGuest, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumberofGuest, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button class="btn btn-success relative" id="btnSubmit" type="submit">
                <i class="loader"></i>
                Submit
            </button>
            <button data-dismiss="modal" id="cancel" class="btn btn-default" type="button">Cancel</button>
            <h3>@ViewBag.Message</h3>

        </div>

        

        <div>
            <input type="button" value="Back To List" onclick="location.href='@Url.Action("Index", "Booking")'" />
        </div>
    </form>
</div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
